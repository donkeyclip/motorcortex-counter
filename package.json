{
  "name": "@donkeyclip/motorcortex-counter",
  "version": "2.1.2",
  "description": "A MotorCortex plugin for animating number progress from a start to an end value.",
  "main": "dist/motorcortex-counter.cjs.js",
  "module": "dist/motorcortex-counter.esm.js",
  "browser": "dist/motorcortex-counter.umd.js",
  "author": "Donkeyclip (donkeyclip.com) <opensource@donkeyclip.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/donkeyclip/motorcortex-counter"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --mode=development --config ./demo/webpack.config.js",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "motorcortex"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "peerDependencies": {
    "@donkeyclip/motorcortex": ">= 8 < 10"
  },
  "devDependencies": {
    "@babel/cli": "7.21.5",
    "@babel/core": "7.22.1",
    "@babel/eslint-parser": "7.21.8",
    "@babel/plugin-syntax-jsx": "7.21.4",
    "@babel/plugin-transform-react-jsx": "7.22.3",
    "@babel/preset-env": "7.22.2",
    "@donkeyclip/motorcortex": "9.7.0",
    "@donkeyclip/motorcortex-player": "2.10.8",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "21.1.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.8",
    "@semantic-release/npm": "8.0.3",
    "@size-limit/preset-big-lib": "6.0.4",
    "babel-loader": "8.3.0",
    "concurrently": "7.6.0",
    "core-js": "3.30.2",
    "css-loader": "6.7.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "5.2.0",
    "husky": "7.0.4",
    "prettier": "2.8.8",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "18.0.1",
    "size-limit": "6.0.4",
    "webpack": "5.82.1",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.15.0"
  }
}
